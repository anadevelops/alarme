@gateway = http://localhost:8000


//--------------------------------------------------------
// Alarme Service (8090)
//--------------------------------------------------------
@alarme-service = http://localhost:8090
@id-alarme = 0

# Consultar Alarmes
GET {{alarme-service}}/alarme
Content-Type: application/json
###

# Consultar Alarme por ID
GET {{alarme-service}}/alarme/{{id-alarme}}
Content-Type: application/json
###

# Cadastrar Alarme
POST {{alarme-service}}/alarme
Content-Type: application/json

{
    "local": "Florianópolis",
    "usuarios": "Lucas",
    "monitora": "",
    "id": {{id-alarme}}
}
###

# Atualizar Alarme
PATCH {{alarme-service}}/alarme/{{id-alarme}}
Content-Type: application/json

{
    "local": "Florianópolis",
    "usuarios": "Lucas",
    "monitora": ""
}
###

# Excluir Alarme
PATCH {{alarme-service}}/alarme/{{id-alarme}}
Content-Type: application/json
###


//--------------------------------------------------------
// Disparo Service (8050)
//--------------------------------------------------------
@disparo-service = http://localhost:8050

# Disparar Alarme
POST {{disparo-service}}/dispara/{{id-alarme}}
