//--------------------------------------------------------
// Usuario Service (8080)
//--------------------------------------------------------
@usuario-service = http://localhost:8080
@cpf = 456

# Consultar Usuários
GET {{usuario-service}}/usuario/
Content-Type: application/json
###

# Consultar Usuário por CPF
GET {{usuario-service}}/usuario/{{cpf}}
Content-Type: application/json
###

# Cadastrar Usuário
POST {{usuario-service}}/usuario/
Content-Type: application/json

{
    "nome": "Lucas",
    "telefone": "489",
    "cpf": {{cpf}}
}
###

# Atualizar Usuário
PATCH {{usuario-service}}/usuario/{{cpf}}
Content-Type: application/json

{
    "nome": "Lucas",
    "telefone": "456"
}
###

# Excluir Usuário
DELETE {{usuario-service}}/usuario/{{cpf}}
Content-Type: application/json
###